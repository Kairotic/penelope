import Sound.Tidal.VisCycle
import Data.Colour
import Data.Colour.Names
let v = visCycle "demo" ""
let blend' x y z = blend z x y
x1 silence




v $ fast "12 6" $ every "<3 2>" ((1/3) <~) "red blue green"


d1 $ chunk 4 (hurry 2) $ superimpose rev $ chop 8 $ sound "bd cp sn:2 arpy"

d2 $ sound "drum(3,8)"

d3 $ chunk 4 (hurry 2) $ n (off 0.125 (+12) $ off 0.25 (+7) $"<c7(3,8) e7(5,8) f7(3,8) g8(3,8,2)>") # sound "rash"
  # gain 1.1

-

v $ blend' <$> (fast 6 "orange [red [pink red] yellow]") <*> (fast 12 "blue purple") <*> (fast 2 sine)



