import Sound.Tidal.VisCycle
import Data.Colour
import Data.Colour.Names
let v = visCycle "demo" ""
x1 silence

v $ superimpose (rev) $ fast 12 $ every 4 (slow 2) $ every 4 ((1/3) <~) "red pink orange"

v $ "black black grey _ black grey _ black grey _ grey _"

import Sound.Tidal.Vis

vPDF "test.pdf" (100, 15) $
  fast 32 $
  superimpose id $ superimpose rev $ every 2 (slow 2) $ superimpose rev $ superimpose (iter 4) $ superimpose ((1/4) <~) $ "[black black white white black white]"